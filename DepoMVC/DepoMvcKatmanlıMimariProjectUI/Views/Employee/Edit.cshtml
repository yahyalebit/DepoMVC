@model Entity.Concrete.Employee

@{
    ViewBag.Title = "Çalışanı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Çalışanı Düzenle</h2>

<div class="card shadow-lg p-4">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.EmployeeId)

            <div class="mb-3">
                @Html.LabelFor(model => model.EmployeeFirstName, new { @class = "form-label fw-bold" })
                @Html.EditorFor(model => model.EmployeeFirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Çalışan adını girin" } })
                @Html.ValidationMessageFor(model => model.EmployeeFirstName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.EmployeeLastName, new { @class = "form-label fw-bold" })
                @Html.EditorFor(model => model.EmployeeLastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Çalışan soyadını girin" } })
                @Html.ValidationMessageFor(model => model.EmployeeLastName, "", new { @class = "text-danger" })
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">Güncellemeyi Kaydet</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">Geri Dön</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
