@model IEnumerable<Entity.Concrete.Category>

@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Kategori Listesi</h2>
        @Html.ActionLink("+ Yeni Kategori", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td>@Html.DisplayFor(modelItem => item.CategoryDescription)</td>
                            <td>
                                <span class="badge @(item.CategoryStatus ? "bg-success" : "bg-danger")">
                                    @(item.CategoryStatus ? "Aktif" : "Pasif")
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.CategoryID })" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.CategoryID })" class="btn btn-danger btn-sm" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>