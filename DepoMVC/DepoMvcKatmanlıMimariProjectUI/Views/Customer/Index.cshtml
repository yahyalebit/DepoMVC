@model IEnumerable<Entity.Concrete.Customer>

@{
    ViewBag.Title = "Müşteri Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Müşteri Listesi</h2>
        @Html.ActionLink("+ Yeni Müşteri", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Müşteri Adı</th>
                        <th>Soyadı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                            <td>@Html.DisplayFor(modelItem => item.CustomerSurName)</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.CustomerId })" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.CustomerId })" class="btn btn-danger btn-sm" onclick="return confirm('Bu müşteriyi silmek istediğinize emin misiniz?');">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>