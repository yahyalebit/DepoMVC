@model Entity.Concrete.Product

@{
    ViewBag.Title = "Ürünü Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-danger mb-4">Ürünü Sil</h2>

<div class="card shadow-lg p-4 border border-danger">
    <div class="card-body">
        <h4 class="text-center text-danger">Bu ürünü silmek istediğinize emin misiniz?</h4>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <!-- Ürün Bilgileri -->
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Ürün Adı:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                    <dt class="col-sm-4 fw-bold">Fiyat:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductPrice) ₺</dd>

                    <dt class="col-sm-4 fw-bold">Stok:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock) Adet</dd>
                </dl>
            </div>

            <div class="col-md-6 text-center">
                <!-- Ürün Resmi Önizleme -->
                <h5 class="fw-bold">Ürün Resmi</h5>
                @if (!string.IsNullOrEmpty(Model.ProductImage))
                {
                    <img src="@Model.ProductImage" alt="Ürün Resmi" class="img-thumbnail mb-2" width="120" height="120" />
                }
                else
                {
                    <p class="text-muted">Mevcut resim yok</p>
                }
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Silme Onay Kutusu -->
            <div class="form-check text-center mt-3">
                <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                <label class="form-check-label fw-bold text-danger" for="confirmDelete">
                    Silme işlemini onaylıyorum
                </label>
            </div>

            <!-- Butonlar -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4">Evet, Sil</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">Geri Dön</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
