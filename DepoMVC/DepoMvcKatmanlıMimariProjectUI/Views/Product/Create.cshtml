@model Entity.Concrete.Product

@{
    ViewBag.Title = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Yeni Ürün Ekle</h2>

<div class="card shadow-lg p-4">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <!-- Ürün Adı -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.ProductName, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", placeholder = "Ürün adını girin" } })
                        @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                    </div>

                    <!-- Ürün Fiyatı -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.ProductPrice, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.ProductPrice, new { htmlAttributes = new { @class = "form-control", placeholder = "Fiyatı girin" } })
                        @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
                    </div>

                    <!-- Ürün Resmi -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.ProductImage, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.ProductImage, new { htmlAttributes = new { @class = "form-control", placeholder = "Resim URL'sini girin" } })
                        @Html.ValidationMessageFor(model => model.ProductImage, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Stok -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Stock, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control", placeholder = "Stok miktarını girin" } })
                        @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
                    </div>

                    <!-- Kategori Seçimi -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.CategoryID, "Kategori Seçiniz", new { @class = "form-label fw-bold" })
                        @Html.DropDownListFor(model => model.CategoryID, (IEnumerable<SelectListItem>)ViewBag.Categories, "Kategori Seçiniz", new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- Butonlar -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">Ürünü Kaydet</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">Geri Dön</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
