@model IEnumerable<DepoMvcKatmanlıMimariProjectUI.Models.ProductViewModel>

@{
    ViewBag.Title = "Ürün Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Ürün Listesi</h2>
        @Html.ActionLink("+ Yeni Ürün", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Resim</th>
                        <th>Stok</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                            <td>@Html.DisplayFor(modelItem => item.ProductPrice) ₺</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ProductImage))
                                {
                                    <img src="@item.ProductImage" alt="Ürün Resmi" class="img-thumbnail" width="70" height="70" />
                                }
                                else
                                {
                                    <span class="text-muted">Resim Yok</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Stock) Adet</td>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-danger btn-sm" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>